<%-include('./particles/header.ejs') -%>
<h1>Compose</h1>
<form method="post" action="/compose">
  <div class="form-group">  
    <label for="title" >Title</label>
    <input type="text" class="form-control" id="title" placeholder="Enter the title" name="data" />
  </div>
  <div class="form-group">
    <label for="post" >Post</label>
    <textarea name="Postdata" class="form-control" id="post" cols="40" rows="6"></textarea>
  </div>
  <div class="form-group form-check">
    <input type="checkbox" class="form-check-input" id="exampleCheck1" />
    <label class="form-check-label" for="exampleCheck1">Check me out</label>
  </div>
  <button name="button" type="submit" class="btn btn-primary">Publish</button>
</form>

<%- include("./particles/footer") -%>
